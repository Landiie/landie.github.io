---json
{
  "layout": "shop-page.njk"
}
---
<div class="my-5 text-center shop-category-header d-none">
            <img src="../sammi_ico.png" alt="" width="64" height="64" class="me-2">
            <div class="text-wrapper">
              <h1 class="shop-category-header-title">SAMMI EXTENSIONS</h1>
            </div>
          </div>
          <div class="shop-filter text-center">
            <input class="shop-search" style="float: right;" type="search" placeholder="Search for product...">
            <h5 class="ms-2">Filter by:</h5>
            <div class="label-list-filter ms-1">
              <button class="label-free">Free</button>
              <button class="label-tool">Utility</button>
              <button class="label-gaming">Gaming</button>
              <button class="label-audio">Audio</button>
              <button class="label-obs-widget">OBS Widget</button>
              <button class="label-voice">Voice</button>
              <button class="label-beta">Beta</button>
            </div>
          </div>
          <div class="shop-section-contents p-3">
            <!--Sando-->
            <button type="button" onclick="location.href='./sammi-extensions/sando.html'" data-tilt
              data-tilt-max="10" data-tilt-scale="1.05" class="shop-item item-sando"
              data-shop-item-name="Sando">
              <ul class="label-list">
                <li class="label-free">Free</li>
                <li class="label-tool">Utility</li>
              </ul>
              <div class="shop-item-overlay">
                <div class="shop-item-bounds container">
                  <div class="row shop-item-header">
                    <h1>Sando</h1>
                  </div>
                  <div class="shop-item-body">
                    <p>A Library to make extension developer's lives easier!</p>
                  </div>
                </div>
              </div>
            </button>
            <!--LandiTube-->
            <button type="button" onclick="location.href='./sammi-extensions/landitube.html'" data-tilt
              data-tilt-max="10" data-tilt-scale="1.05" class="shop-item item-landitube"
