<!--sidebar canvas button, not in use atm-->
<div class="sidebar-button">
  <button type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample"
      id="sidebar" class="button d-flex justify-content-center align-items-center"
      style="z-index: 10; border-radius: 10rem; width: 4rem; height: 4rem; background-color: rgba(255, 255, 255, 0.265); transform: translate(10px, 10px);">
    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="white" class="bi bi-list"
        viewBox="0 0 16 16">
      <path fill-rule="evenodd"
          d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
    </svg>
  </button>
</div>
<div class="site-shop">
  <div class="container-fluid site-shop-inner-content">
    <!--Shop Header-->
    {% include "shop-header.njk" %}
    <!--Shop Header End-->
    <div class="row site-shop-main">
      {# <nav class="col-xl-2 col-lg-12 site-shop-sidebar">
        <!--Shop Sidebar-->
        {% include "shop-sidebar.njk" %}
        <!--Shop Sidebar End-->
      </nav> #}
      <div class="col-xl-12 col-lg-12 {{ extraShopPageClasses }}">
        {{ content | safe }}
      </div>
    </div>

  </div>
</div>
<!--cards-->
<div class="content-blur-bg">
  <div class="card-bounds">
    <div class="popup-slide border">
      <section class="popup-slide-header">
        <button style="position: absolute; left: 20px;">
          <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="white"
              class="bi bi-x-square card-close" viewBox="0 0 16 16">
