      </div>
      <div style="text-align: center; max-width: 15rem; padding: 1rem;">
                                    Payment is done through <em>
          <a href="https://itch.io">itch.io</a>
        </em> ! It is
                                    highly recommended to make an account to save your purchases!
                                </div>
      <div class="text-center 
                                    d-flex flex-column 
                                    justify-content-evenly 
                                    align-items-center">
        <h5 class="">Price:</h5>
        <h4 style="font-size: 3rem;" class="product-price">{{price | safe}}</h4>
        <button style="width: 5rem; height: 2rem;"
                                        class="button btn btn-primary download-button">Download</button>
      </div>
    </div>
  </div>
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button onclick='removeHash()' class="nav-link active" id="overview-tab"
                                    data-bs-target="#overview" type="button" role="tab" aria-controls="overview"
                                    aria-selected="true">Overview</button>
    </li>
    <li class="nav-item" role="presentation">
      <button onclick='window.location.hash = "setup"' class="nav-link" id="setup-tab"
                                    data-bs-target="#setup" type="button" role="tab" aria-controls="setup"
                                    aria-selected="false">Setup</button>
    </li>
    <li class="nav-item nav-item-docs" role="presentation">
      <a href="documentation" class="nav-link" target="_blank" rel="noopener noreferrer"
                                    id="documentation-tab"
                                    aria-controls="documentation" aria-selected="false">Documentation</a>
    </li>
    <li class="nav-item" role="presentation">
      <button onclick='window.location.hash = "tutorials"' class="nav-link" id="tutorials-tab"
                                    data-bs-target="#tutorials" type="button" role="tab" aria-controls="tutorials"
                                    aria-selected="false">Tutorials</button>
    </li>
    <li class="nav-item" role="presentation">
      <button onclick='window.location.hash = "troubleshooting"' class="nav-link"
                                    id="troubleshooting-tab" data-bs-target="#troubleshooting" type="button" role="tab"
                                    aria-controls="troubleshooting" aria-selected="false">Troubleshooting</button>
    </li>
    <li class="nav-item" role="presentation">
      <button onclick='window.location.hash = "patchnotes"' class="nav-link"
                                    id="patchnotes-tab" data-bs-target="#patchnotes" type="button" role="tab"
                                    aria-controls="patchnotes" aria-selected="false">Patch notes</button>
    </li>
  </ul>
  <!--Product Body-->
  <!-- Tab panes -->
  <div class="tab-content">
    <div class="tab-pane active" id="overview" role="tabpanel" aria-labelledby="overview-tab">
      <div class="row">
        <div class="col-xl-7 col-lg-12 productpage-section-contents-body">
          <!--Overview start-->
          {{ content | splitContent(0) | safe }}
          <!--Overview end-->
        </div>
        <div class="col-xl-5 col-lg-12 d-flex justify-content-center flex-wrap">
          <!--Overview start-->
          {{ content | splitContent(1) | safe }}
          <!--Overview end-->
        </div>
      </div>
    </div>
    <div class="tab-pane" id="setup" role="tabpanel" aria-labelledby="setup-tab">
      <div class="row">
        <div class="col-lg-12 productpage-section-contents-body">
          <!--Setup start-->
          {{ content | splitContent(2) | safe }}
          <!--Setup end-->
        </div>
      </div>
    </div>
    <div class="tab-pane" id="documentation" role="tabpanel"
                                aria-labelledby="documentation-tab">
      <div class="row productpage-section-contents-body">
        <div class="container">
                                        Visit the new Documentation page here!<br>
          <button onclick="window.location.href='./documentation';" class="btn btn-primary">Documentation</button>
        </div>
      </div>
    </div>
    <div class="tab-pane" id="tutorials" role="tabpanel" aria-labelledby="tutorials-tab">
      <div class="row">
        <div style="gap: 1rem;" class="container-fluid productpage-section-contents-body d-flex flex-row flex-wrap">
          <!--Tutorials start-->
          {{ content | splitContent(3) | safe }}
          <!--Tutorials end-->
        </div>
      </div>
    </div>
    <div class="tab-pane" id="troubleshooting" role="tabpanel"
                                aria-labelledby="troubleshooting-tab">
      <div class="row">
        <div class="col-xl-9 col-lg-12 productpage-section-contents-body">
          <!--troubleshooting start-->
          {{ content | splitContent(4) | safe }}
          <!--troubleshooting end-->
        </div>
      </div>
    </div>
    <div class="tab-pane" id="patchnotes" role="tabpanel" aria-labelledby="patchnotes-tab">
      <div class="row">
        <div class="col-xl-9 col-lg-12 productpage-section-contents-body patch-notes-content">
          <!--Patch notes start-->
          {{ content | splitContent(5) | safe }}
          <!--Patch notes end-->
        </div>
        <div class="col-xl-3 col-lg-12">
          <div
                                            class="sticky-xl-top productpage-section-contents-body productpage-section-contents-sidebar">
            <div class="productpage-section-contents-sidebar-body toc">
              <!--toc, to be auto genned-->
            </div>

          </div>
        </div>
      </div>
    </div>
    <!--a padding div to fix scrolling on smaller sizes-->
    <div style="padding-bottom: 15rem;"></div>
  </div>
</div>
<!--Product ends here-->
<!-- Additional scripts specific to this page -->
<script type="text/javascript" src="https://static.itch.io/api.js"></script>
<script src="/assets/js/product.js" product-name="{{title | slugify}}"></script>
<script src="/assets/js/product-tabs.js" product-name="{{title | slugify}}"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/tocbot/4.18.2/tocbot.min.js"></script>
<script>
tocbot.init({
// Where to render the table of contents.
tocSelector: '.toc',
// Where to grab the headings to build the table of contents.
contentSelector: '.patch-notes-content',
// Which headings to grab inside of the contentSelector element.
headingSelector: 'h1',
// For headings inside relative or absolute positioned containers within content.
hasInnerContainers: true,
orderedList: false
});
